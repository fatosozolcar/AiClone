@page "/gptchatui"
<h3>Component</h3>

<div class="flex h-screen items-center justify-center bg-gray-100">
    <div class=" card h-5/6 w-11/12 shadow-lg md:w-1/2 lg:w-1/3">
        <div class="card-body flex h-full flex-col">
            <div class="flex-grow space-y-4 overflow-y-auto">
               @*  AI Message *@
               <div class="chat chat-start">
                <div class="chat-image avatar">
                    <div class="w-10 rounded-full">
                        <img src="../wwwroot/ai-avatar.png" alt="AI Avatar">
                    </div>
                </div>
                <div class="chat-bubble chat-bubble-secondary">Hello! How can i assist you today?</div>
                <div class="chat-footer opacity-50">9.30 am</div>
               </div>
               @* User Message *@
               <div class="chat chat-end">
                <div class="chat-image avatar">
                    <div class="div w-10 rounded-full">
                        <img src="../wwwroot/user-avatar.png" alt="User Avatar">
                    </div>
                    <div class="chat-bubble chat-bubble-secondary">I need help my c# project</div>
                    <div class="chat-footer opacity-50">9.32 am</div>
                </div>
                @* System Message *@
                <div class="chat chat-start">
                    <div class="chat-image avatar">
                        <div class="w-10 rounded-full">
                            <img src="../wwwroot/ai-avatar.png" alt="AI Avatar">
                        </div>
                    </div>
                    <div class="chat-bublle chat-bubble-secondary">Sure I'd be happy to help! Can you provide more c# project</div>
                    <div class="div chat-footer opacity-50">9.35 am</div>
                </div>

                @* More Messages *@

               </div>
               <div class="mt-4">
                <div class="input-group">
                    <input type="text" placeholder="Type your message ..." class="input input-bordered flex-grow rounded-r-none">
                    <button class="btn btn-primary rounded-l-none">Send</button>
                </div>
               </div>
              
            </div>
        </div>
    </div>
</div>


























